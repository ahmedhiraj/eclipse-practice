
import java.util.Scanner;
 class NP1
{
    public static void main(String[] args) 
    {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter the value of n:");
 
        int n = scanner.nextInt();
        System.out.println("--------The Pattern is-------"); 
		int k=n;
        for(int i=1;i<=n;i++) 
        {
		   k=2*i*n-n;
           for(int j=1;j<=i;j++) 
           {
        	   System.out.print(k--);
           }
            
 
            System.out.println();
			
        }
 
        
    }
}